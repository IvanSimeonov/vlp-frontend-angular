echo "Running lint-staged..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "Lint-staged failed! Fix issues and try again."
  exit 1
fi

echo "Running tests..."

npm run test-headless
if [ $? -ne 0 ]; then
  echo "Tests failed! Fix issues and try again."
  exit 1
fi

echo "All checks passed! Proceeding with commit!"